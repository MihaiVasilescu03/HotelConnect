<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ManageFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addUserButton"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundedsquare"
            android:drawableLeft="@drawable/addusericon"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Adaugă Angajați"
            android:textAllCaps="false"
            android:textColor="@color/limedark"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/removeUserButton"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundedsquare"
            android:drawableLeft="@drawable/removeusericon"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Șterge Angajați"
            android:textAllCaps="false"
            android:textColor="@color/limedark"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addUserButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/showUserButton"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundedsquare"
            android:drawableLeft="@drawable/showusericon"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Afișează Angajati"
            android:textAllCaps="false"
            android:textColor="@color/limedark"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/removeUserButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addAnnouncementButton"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundedsquare"
            android:drawableLeft="@drawable/addnotificationicon"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Adaugă Anunț"
            android:textAllCaps="false"
            android:textColor="@color/limedark"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showUserButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>